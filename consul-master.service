[Unit]
Description=consul

[Service]
ExecStart=/usr/bin/consul agent -client 0.0.0.0 -data-dir /var/lib/consul --bootstrap --server -advertise {{hostvars[groups['nomad.0'][0]]['network_interface.0.address']}}
ExecReload=/bin/kill -HUP $MAINPID
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
